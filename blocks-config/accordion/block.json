{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "version": "0.1.0",
    "name": "premium/accordion",
    "title": "Accordion",
    "textdomain": "premium-blocks-for-gutenberg",
    "description": "Display collapsed content like FAQs using Premium Accordion Block.",
    "category": "premium-blocks",
    "attributes": {
        "blockId": {
            "type": "string",
            "default": ""
        },
        "repeaterItems": {
            "type": "array",
            "default": []
        },
        "direction": {
            "type": "string",
            "default": "ltr"
        },
        "titleTag": {
            "type": "string",
            "default": "h4"
        },
        "titleStyles": {
            "type": "array",
            "default": [
                {
                    "titleColor": "",
                    "titleBack": ""
                }
            ],
            "isStyle": true
        },
        "arrowStyles": {
            "type": "array",
            "default": [
                {
                    "arrowColor": "",
                    "arrowBack": "",
                    "arrowPos": "out",
                    "arrowPadding": "",
                    "arrowRadius": "",
                    "arrowSize": 15
                }
            ],
            "isStyle": true
        },
        "descStyles": {
            "type": "array",
            "default": [
                {
                    "descAlign": "left",
                    "descColor": "",
                    "descBack": ""
                }
            ],
            "isStyle": true
        },
        "descAlign": {
            "type": "object",
            "default": {
                "Desktop": "left",
                "Tablet": "left",
                "Mobile": "left"
            },
            "isStyle": true
        },
        "contentType": {
            "type": "string",
            "default": "text"
        },
        "titleEditBorder": {
            "type": "boolean"
        },
        "titleMargin": {
            "type": "object",
            "default": {
                "Desktop": "10",
